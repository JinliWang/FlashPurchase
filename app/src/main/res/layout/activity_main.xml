<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.app.library.view.MyViewPager
        android:id="@+id/vp_tab_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View style="@style/style_dividing_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:paddingTop="5dp">

        <RadioGroup
            android:id="@+id/rg_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_home"
                style="@style/main_tab_style"
                android:checked="true"
                android:drawableTop="@drawable/select_fragment_home"
                android:text="@string/fragment_home"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_new_state"
                style="@style/main_tab_style"
                android:drawableTop="@drawable/select_fragment_new_state"
                android:text="@string/fragment_new_state"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_goods_type"
                style="@style/main_tab_style"
                android:drawableTop="@drawable/select_fragment_goods_type"
                android:text="@string/fragment_goods_type"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rb_me"
                style="@style/main_tab_style"
                android:drawableTop="@drawable/select_fragment_me"
                android:text="@string/fragment_mine"
                android:textSize="14sp" />
        </RadioGroup>
    </RelativeLayout>


</LinearLayout>