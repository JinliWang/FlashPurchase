<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/margin_10">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-05-03 20:59:30"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_content_second" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_goods"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_5"
                android:layout_weight="0.5"
                android:scaleType="fitXY"
                android:src="@drawable/tuxiang" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginLeft="@dimen/margin_5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="米家电动滑板车 迷你........."
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/text_content" />

                <TextView
                    android:id="@+id/tv_comsumer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="成交人：旋转木马"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/text_content_second" />

                <TextView
                    android:id="@+id/tv_market_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="市场价：￥106.00"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/text_content_second" />

                <TextView
                    android:id="@+id/tv_current_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="成交价：￥8.60"
                    android:textColor="@color/title_color"
                    android:textSize="@dimen/text_content_second" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="91.0%"
                    android:textColor="@color/title_color"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="节省"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_content_second" />

                <TextView
                    android:id="@+id/tv_pai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_sale_bg"
                    android:drawableLeft="@drawable/icon_paimai"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="立即拍"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
